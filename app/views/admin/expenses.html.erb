
<div class="g-bg mt-5">
  
<ol class="list-group list-group-numbered list-group-success">

   <% @employee_expenses.each do |expense| %>
   <a href= "<%=edit_expense_path(expense)%>" class="bg-light media border border-muted pd-g mb-3">
  <li class="list-group-item d-flex justify-content-between align-items-start p-4 list-group-item-success">
    <div class="ms-2 me-auto">
      <div class="fw-bold"><%= expense.name %>
       <% if expense.status == nil%>
      <span class="badge bg-warning badge-pill badge-warning">Pending</span>
      <%elsif expense.status == true%>
      <span class="badge bg-success badge-pill badge-warning">Approved</span>
      <%else%>
      <span class="badge bg-danger badge-pill badge-warning">Rejected</span>
      <%end%>
      </div>
      <%=expense.created_at.strftime("%d-%b-%Y")%>
    </div>
    <span class="badge bg-primary rounded-pill fs-4">Rs.<%=expense.amount%></span>
  </li>
  </a>
  <%end%>
</ol>

<div class="total-div d-flex border-bottom d-flex justify-content-between align-items-start border-muted bg-light p-4 ">
    <span class="p-3 float-left fs-3 text-muted">Total</span><span class="p-3 float-right font-weight-bold fs-3">Rs. <%=@total_expense_amt%> </span>
</div>


