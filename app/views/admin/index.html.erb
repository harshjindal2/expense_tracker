<h1 class="text-center text-danger mt-5"> Employees Details </h1>

<%@employees.each do |employee|%>

<a href="<%=admin_expenses_path(:employee_id => employee.id)%>" class ="bg-light media border border-muted pd-g mb-3">
<ul class="list-group mt-5 p-2">
  <li class="list-group-item d-flex justify-content-between align-items-center p-5">
    <h4><%= employee[:name] %></h4>
    <span class="text-center fs-4"><em> <%= employee[:email] %></em></span>
    <span class="badge bg-primary rounded-pill fs-5"><%= employee[:created_at] %></span>
  </li>

</ul>

</a>

<%end%>

